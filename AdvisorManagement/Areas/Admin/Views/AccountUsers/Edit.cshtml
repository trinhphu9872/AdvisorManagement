@model AdvisorManagement.Models.AccountUser

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "AccountUsers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <div class="container">
        <div class="row flex-lg-nowrap">


            <div class="col">
                <div class="row">
                    <div class="col mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="e-profile">
                                    <div class="row">
                                        <div class="col-12 col-sm-auto mb-3">
                                            <div class="mx-auto" style="width: 140px;">
                                                <div class="d-flex justify-content-center align-items-center rounded" style="height: 140px; background-color: rgb(233, 236, 239);">
                                                    <span style="color: rgb(166, 168, 170); font: bold 8pt Arial;">
                                                        <img src="@Url.Content(Model.img_profile+" ")" id="previewimage" width="140" height="140" />
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
                                            <div class="text-center text-sm-left mb-2 mb-sm-0">

                                                <div class="mt-2">
                                                    <input class="btn btn-outline-secondary" accept="image/*" type="file" name="ImageUpload" onchange="ShowImageProduct(this, document.getElementById('previewimage'))" />
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="tab-content pt-3">
                                        <div class="tab-pane active">
                                            <form class="form" novalidate="">
                                                <div class="row">
                                                    <div class="col">
                                                        <div class="row">
                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <label>Họ và tên</label>
                                                                    <input class="form-control" type="text" name="user_name" placeholder="Họ và tên" value="@Model.user_name">
                                                                </div>
                                                            </div>
                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <label>Mã số</label>
                                                                    <input class="form-control" type="text" name="user_code" placeholder="" value="@Model.user_code">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                
                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <label>Giới tính</label>
                                                                    <input class="form-control" type="text" name="gender" placeholder="" value="@Model.gender">
                                                                </div>
                                                            </div>
                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <label>địa chỉ</label>
                                                                    <input class="form-control" type="text" name="address" placeholder="" value="@Model.address">
                                                                </div>
                                                            </div>
                                                            <div class="col">
                                                                <div class="form-group">
                                                                </div>
                                                            </div>
                                                            <div class="col">
                                                                <div class="form-group">
                                                                </div>
                                                            </div>


                                                        </div>
                                                        <div class="row">
                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <label>Email</label>
                                                                    <input class="form-control" type="text" name="email" placeholder="" value="@Model.email">
                                                                </div>
                                                            </div>

                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <label>Số điện thoại</label>
                                                                    <input class="form-control" type="text" name="phone" placeholder="" value="@Model.phone">
                                                                </div>
                                                            </div>
                                                            <div class="col">
                                                                <div class="form-group">
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group">
                                                        <label>Chọn quyền:</label>
                                                        @*<select name="role" style=" width: 155px;
                                                                height: 35px; text-align: center; font-size: 15px;" , required="true">
                                                                <option value="0">-----Chọn Quyền-----</option>

                                                            </select>*@
                                                        @Html.DropDownList("id_Role", (IEnumerable<SelectListItem>)ViewBag.id_Role, null, new { @class = "form-control", @style = " width: 255px;    height: 40px; " })
                                                        <p class="text-danger">@ViewBag.ErrorMessage</p>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col d-flex justify-content-end">
                                                        <button class="btn btn-primary" type="submit">Save Changes</button>
                                                    </div>
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
